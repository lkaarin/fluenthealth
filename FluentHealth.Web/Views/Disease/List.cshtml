@model List<DiseaseViewModel>

@{
    ViewData["Title"] = "List";
}

<table class="table table-striped" >
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Start date</th>
            <th>End date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (DiseaseViewModel disease in Model)
        {
            <tr>
                <td class="justify-content-center">
                    @if (!disease.EndDate.HasValue)
                    {
                        <span style="font-size: 24px; color: black;">
                            <i class="fas fa-procedures"></i>
                        </span>
                    }
                </td>
                <td>@disease.Person.Name</td>
                <td>@disease.StartDate.ToString(DateTimeFormats.DateFormat)</td>
                <td>@disease.EndDate?.ToString(DateTimeFormats.DateFormat)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@disease.DiseaseId" class="btn btn-outline-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@disease.DiseaseId" style="display:inline">
                        <button class="btn btn-outline-danger">Delete</button>
                    </form>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-outline-primary btn-lg btn-block">Add new</a>
