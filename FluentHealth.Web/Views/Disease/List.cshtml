@model List<DiseaseViewModel>

@{
    ViewData["Title"] = "List";
}

<table class="table table-striped" style="max-width:800px; margin:auto">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Start date</th>
            <th>End date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (DiseaseViewModel disease in Model)
        {
            <tr>
                <td class="justify-content-center">
                    @if (!disease.EndDate.HasValue)
                    {
                        <span style="font-size: 24px; color: black;">
                            <i class="fas fa-procedures"></i>
                        </span>
                    }
                </td>
                <td>@disease.Person.Name</td>
                <td>@disease.StartDate.ToString(DateTimeFormats.DateFormat)</td>
                <td>@disease.EndDate?.ToString(DateTimeFormats.DateFormat)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@disease.DiseaseId" class="btn">Edit</a>
                    <a asp-action="Delete" class="btn">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Add new</a>