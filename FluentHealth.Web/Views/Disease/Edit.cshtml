@model EditDiseaseViewModel

@{
    ViewData["Title"] = "Disease";
}
<style>
    input, select, textarea{
        max-width:350px;
    }
    form{
        margin:auto;
        max-width:1080px;
    }
</style>

<form asp-action="Save" method="post">
    <div class="form-group row">
        <label asp-for="StartDate" class="col-sm-2 col-form-label">Start date</label>
        <div class="col-sm-10">
            <input asp-for="StartDate" type="date" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EndDate" class="col-sm-2 col-form-label">Start date</label>
        <div class="col-sm-10">
            <input asp-for="EndDate" type="date" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Person" class="col-sm-2 col-form-label">Person</label>
        <div class="col-sm-10">
            <select asp-for="Person" asp-items="@Model.AvailablePersons.Select(x=> new SelectListItem(x.Name, x.Id.ToString()))" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Symptoms" class="col-sm-2 col-form-label">Symptoms</label>
        <div class="col-sm-10">
            <select asp-for="Symptoms" multiple class="form-control" asp-items="@Model.AvailableSymptoms.Select(x=> new SelectListItem(x.Name, x.Id.ToString()))"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Diagnoses" class="col-sm-2 col-form-label">Diagnos</label>
        <div class="col-sm-10">
            <select asp-for="Diagnoses" multiple class="form-control" asp-items="@Model.AvailableDiagnoses.Select(x=> new SelectListItem(x.Name, x.Id.ToString()))"></select>
        </div>
    </div>
    <div class="form-group row">
        <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Example textarea</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
